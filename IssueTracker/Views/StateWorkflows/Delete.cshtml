@model IssueTracker.ViewModels.StateWorkflowViewModel

@{
    Layout = "~/Views/Shared/_SettingsTabbedLayout.cshtml";
    ViewBag.Title = "Delete transition";
}

<h2>Delete transition</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>State workflow transition</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FromStateId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FromState.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ToStateId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ToState.Title)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
