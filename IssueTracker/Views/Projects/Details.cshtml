@model IssueTracker.Models.Project

@{
    ViewBag.Title = "Project Details";
}

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Browse Projects", "Index")
</p>

<table class="table">
    <tr>
        <th>
            State
        </th>
        <th>
            Name
        </th>
        <th>
            Assignee
        </th>
        <th>

        </th>
    </tr>

        @foreach (var item in Model.Issues)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.State.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                    <br/>
                    <i><small>reported by @Html.DisplayFor(modelItem => item.Reporter.Email)</small></i>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Assignee.Email)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Issues", new { id = item.Id }, null)
                </td>
            </tr>
        }

    </table>