@model IssueTracker.Models.Issue

@{
    ViewBag.Title = "Details";
}

<div>
    <br/>
    <p>
        @Html.DisplayNameFor(model => model.Project):
        @Html.ActionLink(Model.Project.Title, "Details", "Projects", new {id = Model.ProjectId}, null)
    </p>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    reported by @Html.DisplayFor(model => model.Reporter.Email)
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.State):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.State.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Assignee):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Assignee.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
</div>
